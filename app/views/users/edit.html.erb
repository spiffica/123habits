<% provide :title, "Edit User" %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for(@user) do |f| %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit 'Save changes', class: "btn btn-primary btn-large" %>
    <% end %>
  </div>
</div>