var counter = $('span#affirmations_count').html();
$('.delete_affirmation').on('ajax:success', function(){
    var $this = $(this).closest('tr');
    console.log($(this));
    $this.css({"background-color":"hsla(355, 100%, 50%, .5)"});//.delay(500);
    $this.slideUp(500, function(){
        $this.remove();
    $('span#affirmations_count').html(counter - 1);
        
    });
}); 