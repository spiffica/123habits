<%= content_for :info do %>
  <div class="span3 status_info <%= @habit.status %>">
    <%= render 'status_info' %>
  </div>
  <div class="well span9">
    <h1 id="statement">
      <span><%= @habit.statement %></span> 
      <small><%= link_to 'edit', edit_habit_path(@habit), remote: true,
       :'data-toggle'=>'modal' %></small>
     </h1>
      <p class="reward"><i class = "icon-star-empty"></i>Reward: 
        <span id="reward"><%= @habit.reward %></span>
      </p>
  </div>
  <%#= render 'stats_table' %>
<% end %>
<%= content_for :left_sidebar do %>
  <ul class="nav nav-tabs nav-stacked" id="habits_menu">
    <li class="active">
      <a class="local" href="#reasons">Reasons
        <span id="reasons_count" class="badge">
          <%= @reasons.count %>
        </span>
      </a>
    </li>
    <li>
      <a class="local" href="#steps">Steps
        <span id="steps_count" class="badge">
        <%= @steps.count %>
        </span>
      </a>
    </li>
    <li>
      <a class="local" href="#affirmations">Affirmations
        <span id="affirmations_count" class="badge">
          <%= @affirmations.count %>
        </span>
      </a>
    </li>
    <li><%= link_to "Progress", habit_trackers_path(@habit) %></li>
  </ul>
  <div id="status_related_info">
    <%#= render 'status_info' %>
  </div>
<% end %>



<div class="tab-content"> 
    <div class="tab-pane active" id="reasons">
      <table id="reasons_table" class="table table-striped table-hover">
        <% unless @reasons.empty? %>
          <%= render @reasons %>
        <% else %>
          <p class="instructions">Instructions on how and why to input reasons</p>
        <% end %>
      </table>
      <%= render 'reasons/form' %>
    </div>
    
    <div class="tab-pane" id="steps">
      <table id="steps_table" class="table table-striped table-hover">
        <% unless @steps.empty? %>
          <%= render @steps %>
        <% else %>
          <p class="instructions">Instructions on how and why to input steps</p>
        <% end %>
      </table>
      <%= render 'steps/form' %>
    </div>

    <div class="tab-pane" id="affirmations">
      <table id="affirmations_table" class="table table-striped table-hover">
        <% unless @affirmations.empty? %>
          <%= render @affirmations %>
        <% else %>
          <p class="instructions">Instructions on how and why to input affirmations</p>
        <% end %>
      </table>      
      <%= render 'affirmations/form' %>
    </div>

</div>