<%= content_for :info do %>
  <div class="span3 status_info <%= @habit.status %>">
    <h3 class="status"><%= @habit.status.upcase %></h3>
    <%= render 'start_form' if @habit.pending? %>
  </div>
  <div class="well span8">
    <h1 id="statement">
      <span><%= @habit.statement %></span> 
      <small><%= link_to 'edit', edit_habit_path(@habit), remote: true,
       :'data-toggle'=>'modal' %></small>
     </h1>
      <p class="reward"><i class = "icon-star-empty"></i>Reward: 
        <span id="reward"><%= @habit.reward %></span>
      </p>
  </div>
<% end %>
<%= content_for :left_sidebar do %>
  <ul class="nav nav-list" id="reasons_steps_tabs">
    <li class="active">
      <a href="#reasons">Reasons
        <span id="reasons_count" class="badge">
          <%= @reasons.count %>
        </span>
      </a>
    </li>
    <li>
      <a href="#steps">Steps
        <span id="steps_count" class="badge">
        <%= @steps.count %>
        </span>
      </a>
    </li>
    <li>
      <a href="#affirmations">Affirmations
        <span id="affirmations_count" class="badge">
          <%= @affirmations.count %>
        </span>
      </a>
    </li>
    <li><a href="#">Progress</a></li>
  </ul>
  <div id="status_related_info">
    <%#= render 'status_info' %>
  </div>
<% end %>



<div class="tab-content"> 
    <div class="tab-pane active" id="reasons">
      <table id="reasons_table" class="table table-striped table-hover">
        <% unless @reasons.empty? %>
          <%= render @reasons %>
        <% else %>
          <p id="instructions">Instructions on how and why to input reasons</p>
        <% end %>
      </table>
      <%= render 'reasons/form' %>
    </div>
    
    <div class="tab-pane" id="steps">
      <ul id="list_steps">
        <%= render @steps %>
      </ul>
      <%= render 'steps/form' %>
    </div>
    <div class="tab-pane" id="affirmations">
      <ul id="list_affirmations">
        <%= render @affirmations %>
      </ul>
      <%= render 'affirmations/form' %>
    </div>

</div>