var counter = $('span#habit-count').html();
$('.delete-habit').on('ajax:success', function(){
    var $this = $(this).closest('li');
    $this.css({"background-color":"hsla(355, 100%, 50%, .5)"});//.delay(500);
    $this.slideUp(500, function(){
        $this.remove();
    $('span#habit-count').html(counter - 1);
        
    });
}); 