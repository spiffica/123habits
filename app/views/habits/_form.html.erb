<% is_remote = true unless @habit.new_record? %>
<%= simple_form_for @habit, remote: is_remote do |f| %>
  <%= f.input :statement, autofocus: true %>
  <%= f.input :reward, hint: "Every habit worth starting or ending deserves a reward. It will help you keep your eye on the prize." %>
  <%= f.input :penalty,
              :label => "Penalty days",
              :collection => 1..7,
              :prompt => "Select your punishment",
              hint: "Each failed day adds extra days to your habit length. The default is 7." %>
  
  <%= f.input :habit_type, collection: Habit::TYPE, 
              checked: @habit.habit_type,
              label: 'Habit Type', 
              as: :radio_buttons,
              hint: "Do you want to 'kick' a bad habit, or 'start' a new, positive habit?"
               %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
<% if @habit.started? %>
  <%= simple_form_for @habit do |f| %>   
    <%= f.hidden_field :status, 
              value: "pending"
              %>
    <%= f.submit "Stop habit", class: "btn btn-danger" %>
  <% end %>
<% end %>
