
var counter = $('span#steps_count').html();
$('.delete_step').on('ajax:success', function(){
    var $this = $(this).closest('li');

    $this.css({"background-color":"hsla(355, 100%, 50%, .5)"});

    $this.slideUp(500, function(){
        $this.remove();
        $('span#steps_count').html(counter - 1);
    });
});