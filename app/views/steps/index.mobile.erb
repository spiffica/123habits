		<header data-role="header" data-theme="b">
				<%= link_to 'Back', @habit, "data-role"=>"button", "data-icon"=>"arrow-l"%>
			<h1 id="statement"><%= @habit.statement %></h1>
				<%= link_to 'Add', new_habit_step_path(@habit), "data-role"=>"button", "data-icon"=>"plus" %>
		</header>

		<div data-role="content">
			<ul data-role="listview" data-split-icon="delete">
				<% @habit.steps.each do |step| %>
				 	<li>
				 		<%= link_to content_tag(:p,step.content,class:"list_content"), edit_habit_step_path(@habit,step) %>
				 			<%= link_to 'delete', [@habit, step], method: :delete, confirm: "Are you sure you want to delete this step?" %>
				 	</li>
				<% end %>
			</ul>
		</div>
	</div>